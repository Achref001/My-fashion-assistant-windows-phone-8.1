<Page
    x:Class="My_Fashion_Assistant.AssistantResult"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:My_Fashion_Assistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">



    <Page.BottomAppBar>
        <CommandBar Height="83" IsOpen="True">
            


            <AppBarButton x:ConnectionId='1' Icon="Forward" Label="Main Menu"                       />
            <AppBarButton x:ConnectionId='2' Icon="Forward" Label="Main Menu"                           />

            <!--<AppBarButton Icon="Back" Label="Back" Click="Back_Click"/>-->



        </CommandBar>
    </Page.BottomAppBar>

    <Grid>

        <ProgressRing IsActive="True" x:Name="mProgressRing" Visibility="Visible"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Assistant Result" VerticalAlignment="Top" Height="68" Width="349" FontSize="48"/>
        <Image HorizontalAlignment="Left" Height="75" Margin="152,103,0,0" VerticalAlignment="Top" Width="100" Source="Assets/head.jpg" Stretch="Fill"/>
        <Image x:Name="upperBodyPic" HorizontalAlignment="Left" Height="100" Margin="152,178,0,0" VerticalAlignment="Top" Width="100" Stretch="Fill" Source="Assets/No_Image.png"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="257,194,0,0" VerticalAlignment="Top" Width="29" Source="Assets/left_hand.jpg" Stretch="Fill"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="118,194,0,0" VerticalAlignment="Top" Width="29" Source="Assets/right_hand.jpg" RenderTransformOrigin="0.552,0.516" Stretch="Fill"/>
        <Image HorizontalAlignment="Left" Height="53" Margin="152,278,0,0" VerticalAlignment="Top" Width="100" Stretch="Fill" Source="Assets/middle.jpg"/>
        <Image x:Name="lowerBodyPic" HorizontalAlignment="Left" Height="69" Margin="152,331,0,0" VerticalAlignment="Top" Width="100" Stretch="Fill" Source="Assets/No_Image.png"/>
        <Image x:Name="ShoesPic" HorizontalAlignment="Left" Height="64" Margin="152,405,0,0" VerticalAlignment="Top" Width="100" Stretch="Fill" Source="Assets/No_Image.png"/>
        <Image x:Name="CoatPic" HorizontalAlignment="Left" Height="100" Margin="152,505,0,0" VerticalAlignment="Top" Width="100" Source="Assets/No_Image.png" Stretch="Fill"/>
        <Image x:Name="dressPic" HorizontalAlignment="Left" Height="100" Margin="274,505,0,0" VerticalAlignment="Top" Width="100" Source="Assets/No_Image.png" Stretch="Fill"/>
        <Image x:Name="accessoriesPic" HorizontalAlignment="Left" Height="100" Margin="32,505,0,0" VerticalAlignment="Top" Width="100" Stretch="Fill" Source="Assets/No_Image.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,487,0,0" TextWrapping="Wrap" Text="Accessorie picture" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="171,487,0,0" TextWrapping="Wrap" Text="Coat picture" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="304,487,0,0" TextWrapping="Wrap" Text="Dress picture" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="19,205,0,0" TextWrapping="Wrap" Text="Upper body picture" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,363,0,0" TextWrapping="Wrap" Text="Lower Body picture" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,434,0,0" TextWrapping="Wrap" Text="Shoes picture" VerticalAlignment="Top"/>

    </Grid>
</Page>

