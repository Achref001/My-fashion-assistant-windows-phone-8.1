        <TextBlock Visibility="Collapsed" x:Name="NoDataFound" HorizontalAlignment="Left" Margin="64,217,0,0" TextWrapping="Wrap" Text="No data found , please check your internet connection" VerticalAlignment="Top" Height="194" Width="296" FontSize="36" FontWeight="Bold" FontFamily="Segoe UI Black">
            <TextBlock.Foreground>
